<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:layout_gravity="fill"
    android:layout_margin="0pt"
    android:layout_weight="1"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edt_ShowNumber"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="@string/_0"
        android:background="@color/gray"
        android:gravity="right|bottom"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:layout_weight="1"/>
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|fill"
    android:gravity="bottom|start|fill"
    >
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1pt"
        >
        <Button
            android:id="@+id/btn_AC"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:backgroundTint="@color/buop"
            android:text="@string/ac"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_marginRight="1pt"
            android:onClick="buCleanEvent"
            />
        <Button
            android:id="@+id/btn_PlusMinus"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:backgroundTint="@color/buop"
            android:text="@string/plusminus"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_marginRight="1pt"
            android:onClick="buNumberEvent"
            />

        <Button
            android:id="@+id/btn_Perc"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:backgroundTint="@color/buop"
            android:onClick="buPercentEvent"
            android:text="%"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_Div"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:backgroundTint="@color/buop"
            android:text="/"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_marginRight="1pt"
            android:onClick="buOpEvent"
            />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1pt"
        >
        <Button
            android:id="@+id/btn_7"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:backgroundTint="@color/whiteback"
            android:text="7"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_marginRight="1pt"
            android:onClick="buNumberEvent"
            />
        <Button
            android:id="@+id/btn_8"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:backgroundTint="@color/whiteback"
            android:text="8"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_marginRight="1pt"
            android:onClick="buNumberEvent"
            />
        <Button
            android:id="@+id/btn_9"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:backgroundTint="@color/whiteback"
            android:text="9"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_marginRight="1pt"
            android:onClick="buNumberEvent"
            />
        <Button
            android:id="@+id/btn_Mult"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:backgroundTint="@color/buop"
            android:text="X"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_marginRight="1pt"
            android:onClick="buOpEvent"
            />
    </TableRow>
    <TableRow
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="1pt"
    >
    <Button
        android:id="@+id/btn_4"
        android:layout_height="30pt"
        android:layout_width="30pt"
        android:backgroundTint="@color/whiteback"
        android:text="4"
        android:layout_weight="1"
        android:textSize="18sp"
        android:layout_marginRight="1pt"
        android:onClick="buNumberEvent"
        />
    <Button
        android:id="@+id/btn_5"
        android:layout_height="30pt"
        android:layout_width="30pt"
        android:backgroundTint="@color/whiteback"
        android:text="5"
        android:layout_weight="1"
        android:textSize="18sp"
        android:layout_marginRight="1pt"
        android:onClick="buNumberEvent"
        />
    <Button
        android:id="@+id/btn_6"
        android:layout_height="30pt"
        android:layout_width="30pt"
        android:backgroundTint="@color/whiteback"
        android:text="6"
        android:layout_weight="1"
        android:textSize="18sp"
        android:layout_marginRight="1pt"
        android:onClick="buNumberEvent"
        />
    <Button
        android:id="@+id/btn_Minus"
        android:layout_height="30pt"
        android:layout_width="30pt"
        android:backgroundTint="@color/buop"
        android:text="-"
        android:layout_weight="1"
        android:textSize="18sp"
        android:layout_marginRight="1pt"
        android:onClick="buOpEvent"
        />
</TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1pt"
        >
        <Button
            android:id="@+id/btn_1"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:backgroundTint="@color/whiteback"
            android:text="1"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_marginRight="1pt"
            android:onClick="buNumberEvent"
            />
        <Button
            android:id="@+id/btn_2"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:backgroundTint="@color/whiteback"
            android:text="2"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_marginRight="1pt"
            android:onClick="buNumberEvent"
            />
        <Button
            android:id="@+id/btn_3"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:backgroundTint="@color/whiteback"
            android:text="3"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_marginRight="1pt"
            android:onClick="buNumberEvent"
            />
        <Button
            android:id="@+id/btn_Sum"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:backgroundTint="@color/buop"
            android:text="+"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_marginRight="1pt"
            android:onClick="buOpEvent"
            />
    </TableRow>

</TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:baselineAligned="true">

        <Button
            android:id="@+id/btn_0"
            android:layout_height="30pt"
            android:layout_width="60pt"
            android:layout_weight="3.7"
            android:backgroundTint="@color/whiteback"
            android:text="@string/_0"
            android:textSize="18sp"
            android:layout_marginRight="1pt"
            android:onClick="buOpEvent"
            />
        <Button
            android:id="@+id/btn_Dot"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:layout_weight="1.9"
            android:backgroundTint="@color/whiteback"
            android:text="."
            android:textSize="18sp"
            android:layout_marginRight="1pt"
            android:onClick="buNumberEvent"
            />
        <Button
            android:id="@+id/btn_Eq"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:layout_weight="1.9"
            android:backgroundTint="@color/buop"
            android:text="="
            android:textSize="18sp"
            android:layout_marginRight="1pt"
            android:onClick="buEqualEvent"
            />

    </LinearLayout>

</LinearLayout>